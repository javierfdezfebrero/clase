CREATE TABLE folla01.pinturas (
	nome Varchar(100) NOT NULL,
	pintor varchar(100) NOT NULL,
	ano varchar(100) NOT NULL,
)
ENGINE=InnoDB
DEFAULT CHARSET=utf8mb4
COLLATE=utf8mb4_0900_ai_ci;


