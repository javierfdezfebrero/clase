CREATE TABLE folla01.libro (
	titulo varchar(100) NULL,
	autor varchar(100) NULL,
	editorial varchar(100) NULL
)
ENGINE=InnoDB
DEFAULT CHARSET=utf8mb4
COLLATE=utf8mb4_0900_ai_ci;


