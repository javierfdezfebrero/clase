CREATE TABLE folla01.xogadores (
	Id INT auto_increment NOT NULL,
	DNI varchar(100) NULL,
	Nome varchar(100) NULL,
	Apelidos varchar(100) NULL,
	Idade INT NULL,
	PRIMARY KEY (Id)
)
ENGINE=InnoDB
DEFAULT CHARSET=utf8mb4
COLLATE=utf8mb4_0900_ai_ci




CREATE TABLE folla01.traxecto (
	Orixen Varchar(100) NOT NULL,
	Destino varchar(100) NOT NULL,
	Distancia varchar(100) NOT NULL,
)
ENGINE=InnoDB
DEFAULT CHARSET=utf8mb4
COLLATE=utf8mb4_0900_ai_ci;





